

{% block content %}
        {{ form_start(form) }}

            <div class="form-group">
            {{ form_errors(form.pseudo) }}
            {{ form_label(form.pseudo) }}
            {{ form_widget(form.pseudo, { 'attr': {'class': 'form-control' , 'placeholder': form.pseudo.vars.label} }) }}
            </div>
            <div class="form-group">
            {{ form_errors(form.message) }}
            {{ form_label(form.message) }}
            {{ form_widget(form.message, { 'attr': {'class': 'form-control' , 'placeholder': form.message.vars.label, 'rows': 6} }) }}
            </div>  

            <button type="submit" class="btn btn-info">Envoyer mon commentaire</button>

        {{ form_end(form) }}
{% endblock %}